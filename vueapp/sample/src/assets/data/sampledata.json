{
    "menuItems": [
        {
            "label": "Login Details",
            "type": "loginComponent",
            "elements": [
                {
                    "type": "text",
                    "label": "Username",
                    "model": "username"
                },
                {
                    "type": "text",
                    "label": "Password",
                    "model": "password"
                },
                {
                    "type": "button",
                    "label": "Login",
                    "action": "submitForm",
                    "events": {
                        "click": "onLoginClick"
                    }
                }
            ]
        },
        {
            "label": "Payment Details",
            "type": "paymentComponent",
            "elements": [
                {
                    "type": "text",
                    "label": "Card Number",
                    "model": "cardNumber"
                },
                {
                    "type": "date",
                    "label": "Expiry Date",
                    "model": "expiryDate"
                },
                {
                    "type": "text",
                    "label": "Card Name",
                    "model": "cardName"
                },
                {
                    "type": "text",
                    "label": "CVV",
                    "model": "cvv"
                }
            ]
        },
        {
            "label": "Dropdown Details",
            "type": "dropdownComponent",
            "elements": [
                {
                    "type": "dropdown",
                    "label": "Country",
                    "model": "country",
                    "options": [
                        "USA",
                        "Canada",
                        "Australia"
                    ]
                },
                {
                    "type": "dropdown",
                    "label": "State",
                    "model": "state",
                    "dependsOn": "country",
                    "optionsMap": {
                        "USA": [
                            "California",
                            "New York",
                            "Texas"
                        ],
                        "Canada": [
                            "Ontario",
                            "Quebec",
                            "British Columbia"
                        ],
                        "Australia": [
                            "New South Wales",
                            "Victoria",
                            "Queensland"
                        ]
                    }
                }
            ]
        }
    ]
}